<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stations_item_title"
            style="@style/RecyclerViewPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Название станции" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/RecyclerViewSupportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country" />

            <TextView
                style="@style/RecyclerViewSupportText"
                android:id="@+id/stations_item_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Какая-то страна" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/RecyclerViewSupportText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city" />

            <TextView
                style="@style/RecyclerViewSupportText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/stations_item_city"
                android:layout_weight="1"
                tools:text="Какой-то город" />
        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/stations_item_detail_info"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_info_outline_grey_24px" />


</LinearLayout>